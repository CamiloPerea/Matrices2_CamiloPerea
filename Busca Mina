def fnt_juegoCrucigrama(): 
    global palabras_adivinadas, total_palabras
    ganar = False
    
    while ganar == False:
        fnt_mostrarTablero()
        
        
        if (fnt_ingresarRespuesta() == True):
            palabras_adivinadas += 1
            
        if palabras_adivinadas == total_palabras:
            ganar = True
        
    if ganar == True:
        os.system('cls')
